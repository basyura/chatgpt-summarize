{
  "manifest_version": 3,
  "name": "ChatGPT SumUp",
  "version": "0.1.0",
  "description": "Open ChatGPT with a summarize prompt and the current tab URL.",
  "action": {
    "default_title": "Summarize with ChatGPT"
  },
  "background": {
    "service_worker": "index.js",
    "type": "module"
  },
  "permissions": ["activeTab", "contextMenus"]
}
